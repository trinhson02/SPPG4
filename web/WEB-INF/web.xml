        <servlet-class>controller.UserVerify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SemesterList</servlet-name>
        <servlet-class>controller.SemesterList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSemester</servlet-name>
        <servlet-class>controller.AddSemester</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAssignment</servlet-name>
        <servlet-class>controller.subjectmanager.AddAssignment</servlet-class>
