        <servlet-class>controller.classmanager.ClassManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProject</servlet-name>
        <servlet-class>controller.classmanager.AddProject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClassSetting</servlet-name>
        <servlet-class>controller.classmanager.AddClassSetting</servlet-class>
    </servlet>
